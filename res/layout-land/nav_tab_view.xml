<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/nav_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="55px" >

            <com.android.browser.NavThumbnailView
                android:id="@+id/tab_view"
                android:layout_width="@dimen/nav_tab_width"
                android:layout_height="@dimen/nav_tab_height"
                android:focusable="false" />
        </FrameLayout>

        <include
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="top|center_horizontal"
            layout="@layout/audio_focus_view"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/titlebar_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/addressbar_zoom1_land"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/titlebar_title"
            android:layout_width="@dimen/nav_tab_width"
            android:layout_height="wrap_content"
            android:background="@drawable/addressbar_zoom_land"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:textColor="@color/nav_tabview_title"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/titlebar_input_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/addressbar_zoom1_private_land"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/titlebar_title_private"
            android:layout_width="@dimen/nav_tab_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/addressbar_zoom_private_land"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/title_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/nav_tabview_private_title"
                android:textSize="11sp" />
        </RelativeLayout>
    </FrameLayout>
</merge>