<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/browsersettingitems_layout_height"
    android:gravity="center"
    android:orientation="horizontal" >

    <!-- android:layout_marginTop="@dimen/settings_item_top_bottom_margin" -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/browsersettingitems_title_padding_left"
        android:textColor="@drawable/browser_item_title_text_colorlist"
        android:textSize="@dimen/browsersettingitems_title_text_size" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/browsersetting_arrow_padding_right"
        android:src="@drawable/secletor_setting_item_arrow" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/imageview"
        android:layout_toRightOf="@id/title"
        android:gravity="center_vertical|right"
        android:paddingLeft="@dimen/browsersettingitems_content_padding_left"
        android:singleLine="true"
        android:textColor="@drawable/browser_item_content_text_colorlist"
        android:textSize="@dimen/browsersettingitems_content_text_size" />

</RelativeLayout>